---
import Layout from '../layouts/Layout.astro';
import Navbar from "../components/Navbar.astro";
---

<Layout title="Message Sent | Harry Skerritt">
    <main class="thanks-container">
        <section class="message-box">
            <h1>// Message Sent</h1>
            <p>
                Thanks, <span class="coloured">Harry</span> has received your message.
                Expect a response via email shortly.
            </p>
            <a href="/" class="home-btn">Return to Home</a>

        </section>
    </main>
</Layout>

<style>
    .thanks-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 70vh;
        padding: 2rem;
        font-family: var(--font-mono), monospace;
    }

    .message-box {
        border: 0.2rem solid var(--white);
        padding: 3rem;
        border-radius: 1rem;
        text-align: center;
        max-width: 600px;
    }

    h1 {
        color: var(--orange);
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    p {
        color: var(--white);
        font-size: 1.2rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .coloured {
        color: var(--orange);
    }

    .home-btn {
        display: inline-block;
        color: var(--orange);
        text-decoration: none;
        font-weight: bold;
        border: 1px solid var(--orange);
        padding: 0.8rem 1.5rem;
        border-radius: 0.5rem;
        transition: all 0.2s ease;
    }

    .home-btn:hover {
        background: var(--orange);
        color: var(--bg-colour);
    }
</style>