---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import Button from "../components/Button.astro";
---

<Layout title="Harry Skerritt | Game Developer">

    <section class="main-lander">

        <div class="main-text">
			<h2>Hi I'm</h2>
            <h1>Harry Skerritt</h1>
            <h2>Game Developer</h2>

            <span class="contact-button">
                 <Button text="Contact Me" href="/contact" variant="primary" fullWidth/>
            </span>

        </div>

        <div class="image">
            <img alt="Harry Skerritt" src = "me.png"/>
        </div>

    </section>

</Layout>

<style>

    .main-lander {
        display: flex;
        flex-direction: row;
        flex: 1;
        width: 100%;
    }

    .main-text {
        width: 52%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-left: 5%;
    }

    .main-text h1 {
        padding: 0;
        margin: 0;
        font-size: 7rem;
        font-weight: bolder;
        text-align: right;
        min-width: 100%;
    }

    .main-text h2 {
        padding: 0;
        margin: 0;
        font-size: 3rem;
        font-weight: normal;
        text-align: right;
        color: var(--white);
    }

    .contact-button {
        width: 30%;
        margin-left: 41.5rem;
        margin-top: 2rem;
    }

    img{
        width: 35rem;
        height: 35rem;
        background: #F0A202;
        background: radial-gradient(circle,rgba(240, 162, 2, 1) 0%, rgba(241, 136, 5, 1) 100%);
        border-radius: 50%;
        border: 1vh solid var(--orange);
        box-shadow: 0 20px 100px 50px hsl(0deg 0% 0% / 0.25);
    }


    .image {
        width: 48%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

</style>
