---
import Layout from '../layouts/Layout.astro';
import Navbar from "../components/Navbar.astro";
---

<Layout title="Harry Skerritt | Game Developer">
    <section class="main-lander">

        <div class="main-text">
			<h2>Hi I'm</h2>
            <h1>Harry Skerritt</h1>
            <h2>Game Developer</h2>

            <a href="/contact" class="glitch-btn">
                <span class="text">Contact Me</span>
                <span class="decoration">_</span>
            </a>

        </div>

        <div class="image">
            <img alt="Harry Skerritt" src = "/me.png"/>
        </div>

    </section>

</Layout>

<style>
    .main-lander {
        display: flex;
        flex-direction: row;
        flex: 1;
        width: 100%;
    }

    .main-text {
        width: 52%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-left: 5%;
    }

    .main-text h1 {
        padding: 0;
        margin: 0;
        font-size: 7rem;
        font-weight: bolder;
        text-align: right;
        min-width: 100%;
    }

    .main-text h2 {
        padding: 0;
        margin: 0;
        font-size: 3rem;
        font-weight: normal;
        text-align: right;
        color: var(--white);
    }

    .contact-button {
        width: 30%;
        margin-left: 41.5rem;
        margin-top: 2rem;
    }

    img{
        width: 35rem;
        height: 35rem;
        background: #F0A202;
        background: radial-gradient(circle,rgba(240, 162, 2, 1) 0%, rgba(241, 136, 5, 1) 100%);
        border-radius: 50%;
        border: 1vh solid var(--orange);
        box-shadow: 0 20px 100px 50px hsl(0deg 0% 0% / 0.25);
    }

    .image {
        width: 48%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .glitch-btn {
        background-color: var(--orange);
        color: #2E2F3C;
        border: none;
        padding: 1.2rem;
        font-family: 'IBM Plex Mono', monospace;
        font-weight: bold;
        font-size: 1.1rem;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        transition: all 0.2s;
        margin-top: 2rem;
        border-radius: 1rem;
        width: 20rem;
        margin-left: 40rem;
        text-decoration: none;
    }

    .glitch-btn:hover {
        background-color: var(--nav-hover);
        transform: translateY(-3px);
        box-shadow: 0 5px 0 var(--orange);
    }

    .glitch-btn:active {
        transform: translateY(0);
        box-shadow: none;
    }

    @media (max-width: 768px) {
        .main-lander {
            flex-direction: column;
            align-items: center;
            padding: 3rem 0;
            gap: 1.5rem;
        }

        .main-text {
            display: contents;
            margin-top: 2rem;
        }

        .main-text h1 {
            font-size: 3rem;
            text-align: center;
            min-width: auto;
            order: 1;
            margin: 0;
            padding: 0;
        }

        .main-text h2 {
            font-size: 1.6rem;
            text-align: center;
            order: 1;
        }

        .image {
            width: 100%;
            order: 2;
            display: flex;
            justify-content: center;
            margin: 3rem 0;
        }

        img {
            margin: 0;
            width: 16rem;
            height: 16rem;
            border-width: 6px;
        }

        .glitch-btn {
            order: 3;
            margin: 2rem 0 0;
            width: 100%;
            max-width: 18rem;
            justify-content: center;
        }
    }


</style>
