---
import Layout from '../layouts/Layout.astro';
import Navbar from "../components/Navbar.astro";
import Skill from "../components/Skill.astro";
---

<Layout title="About Me | Harry Skerritt">
    <Navbar />
    <section class="about-info">
        <div class="top-section">
            <div class="text-main">
                <div class="header">
                    <h1>Hi, Iâ€™m <span class="coloured">Harry Skerritt</span></h1>
                </div>

                <h2 class="sub-intro">
                    a UK based game developer currently studying at UWE Bristol.
                </h2>

                <h2 class="bio-text">
                    I have always had a great interest in technology and programming, and have experimented within many different aspects of the role, from embedded systems to web design.
                </h2>
            </div>

            <div class="image-container">
                <img alt="Harry Skerritt" src="/182794287.jpg"/>
            </div>
        </div>

        <div class="full-width-text">
            <h2>
                However, I have always been particularly fond of <span class="coloured">Game Development</span>.
                I am currently studying BSc Games Technology at UWE Bristol to help further my skills within the subject
            </h2>
        </div>
    </section>

    <section class="skills">
        <hr>

        <div class="skills-boxes">
            <div class="skill-row">
                <Skill text="Unity Engine"/>
                <Skill text="Unreal Engine"/>
                <Skill text="C++"/>
                <Skill text="C#"/>
                <Skill text="Git"/>
            </div>

            <div class="skill-row">
                <Skill text="Visual Studio"/>
                <Skill text="3D Game Design"/>
                <Skill text="2D Game Design"/>
                <Skill text="SFML"/>
            </div>
        </div>

    </section>

    <section class="experience">
        Experience
    </section>

</Layout>

<style>
    .about-info {
        padding: 4rem;
        max-width: 1400px;
        margin: 0 auto;
        font-family: var(--font-mono), monospace;
    }

    /* --- About Info --- */

    .top-section {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 2rem;
    }

    .text-main {
        flex: 1;
    }

    .header h1 {
        font-size: 3.5rem;
        margin: 0 0 1rem 0;
        color: var(--white);
    }

    .about-info h2 {
        color: var(--white);
        font-weight: normal;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .sub-intro {
        font-style: italic;
        font-size: 1.8rem;
        text-transform: lowercase;
    }

    .bio-text {
        font-size: 1.6rem;
        max-width: 90%;
    }

    .image-container img {
        width: 22rem;
        height: auto;
        aspect-ratio: 1 / 1;
        object-fit: cover;
        border: 0.5rem solid var(--white);
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    .full-width-text {
        margin-top: 1rem;
    }

    .full-width-text h2 {
        font-size: 1.6rem;
    }

    .coloured {
        color: var(--orange);
    }

    /* Mobile handling */
    @media (max-width: 768px) {
        .top-section {
            flex-direction: column;
            align-items: center;
        }

        .header h1 { font-size: 2.5rem; text-align: center; }
        .about-info { padding: 2rem; }
        .image-container img { width: 100%; max-width: 20rem; }
    }
</style>