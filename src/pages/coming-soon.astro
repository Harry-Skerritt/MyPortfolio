---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Coming Soon | Harry Skerritt">
    <div class="main-cont">
        <div class="cs-box">
            <div class="status-code">STATUS: 403_UNDER_CONSTRUCTION</div>
            <h1 class="main-text" data-text="COMING SOON">COMING SOON</h1>
        </div>
    </div>
</Layout>

<style>
    .main-cont {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #2E2F3C;
        color: #DDE3E0;
        font-family: 'IBM Plex Mono', monospace;
        text-align: center;
        padding: 2rem;
    }

    .status-code {
        color: #FFAE49;
        font-size: 0.9rem;
        margin-bottom: 1rem;
        letter-spacing: 2px;
    }

    h1 {
        font-size: clamp(3rem, 10vw, 6rem);
        margin: 0;
        font-weight: 800;
        letter-spacing: -2px;
    }

    .sub-text {
        margin-top: 1.5rem;
        opacity: 0.6;
        font-size: 1.1rem;
    }

    .action-zone {
        margin-top: 4rem;
    }


    @keyframes blink {
        50% { opacity: 0; }
    }

    .status-code::after {
        content: "_";
        animation: blink 1s step-end infinite;
    }

</style>