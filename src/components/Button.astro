---
interface Props {
    text: string;
    href: string;
    variant?: 'primary' | 'secondary';
    fullWidth?: boolean;
}

const { text, href, variant = 'primary', fullWidth = false } = Astro.props;
---

<a href={href} class={`btn ${variant} ${fullWidth ? 'full-width' : ''}`}>
    {text}
</a>

<style>
    .btn {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        gap: 0.75rem;
        padding: 0.8rem 1.5rem;
        font-family: var(--font-mono), monospace;
        text-decoration: none;
        transition: all 0.2s ease;
        border: 2px solid transparent;
        border-radius: 0.6rem;
    }

    .full-width {
        display: flex;
        width: 100%;
        box-sizing: border-box;
    }

    .primary {
        background-color: var(--orange);
        color: var(--white);
        font-size: 1.5rem;
        font-weight: bolder;
    }

    .primary:hover {
        background-color: transparent;
        border-color: var(--orange);
        color: var(--white);
    }

    .secondary {
        border-color: var(--orange);
        color: var(--white);
    }

    .secondary:hover {
        background-color: var(--orange);
        color: var(--white);
    }
</style>
