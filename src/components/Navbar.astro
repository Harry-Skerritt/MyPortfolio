---
import GithubIcon from "./icons/GithubIcon.astro";
import LinkedinLogo from "./icons/LinkedinLogo.astro";
import ItchLogo from "./icons/ItchLogo.astro";

const { pathname } = Astro.url;

const links = [
    { name: '/home', href: '/' },
    { name: '/projects', href: '/projects' },
    { name: '/about', href: '/about' },
    { name: '/contact', href: '/contact' },
];

const isActive = (href: string) => {
    const normalize = (path: string) => path.replace(/\/$/, "");
    return normalize(pathname) === normalize(href);
};
---

<nav class="navbar">
    <ul class="external-links">
        <li>
            <a href="https://github.com/Harry-Skerritt/" class="social-link">
                <GithubIcon size="28px" />
            </a>
        </li>
        <li>
            <a href="https://linkedin.com/in/harry-skerritt-3491b01a9/" class="social-link">
                <LinkedinLogo size="28px" />
            </a>
        </li>
        <li>
            <a href="https://harry-skerritt.itch.io/" class="social-link">
                <ItchLogo size="28px" />
            </a>
        </li>
    </ul>

    <input type="checkbox" id="menu-toggle" class="menu-toggle" />
    <label for="menu-toggle" class="hamburger">
        <span></span>
        <span></span>
        <span></span>
    </label>

    <ul class="nav-links">
        {links.map((link) => (
                <li class="nav-item">
                    <a href={link.href} class={isActive(link.href) ? "active" : ""}>
                        <span class="mobile-prefix">//</span> {link.name}
                    </a>
                </li>
        ))}
    </ul>
</nav>

<style>
    .navbar {
        position: sticky;
        top: 0;
        width: 100vw;
        margin-left: calc(-50vw + 50%);
        margin-right: calc(-50vw + 50%);
        left: 0;
        background-color: var(--bg-colour);
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2.5rem;
        box-sizing: border-box;
        z-index: 1000;
        box-shadow: 0 4px 20px rgba(0,0,0,0.3);
    }

    .external-links, .nav-links {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
        align-items: center;
    }

    .external-links { gap: 1.5rem; }
    .nav-links { gap: 2.5rem; }

    .social-link {
        color: var(--white);
        display: flex;
        transition: transform 0.2s ease, color 0.2s ease;
    }

    .social-link:hover {
        color: var(--orange);
        transform: translateY(-2px);
    }

    .nav-item a {
        text-decoration: none;
        color: var(--white);
        font-family: var(--font-mono), monospace;
        font-size: 1.4rem;
        transition: color 0.2s ease;
    }

    .nav-item a.active {
        color: var(--orange);
        font-weight: bold;
    }

    .mobile-prefix { display: none; }
    .menu-toggle, .hamburger { display: none; }


    @media (max-width: 768px) {
        .navbar {
            padding: 1rem;
        }

        .external-links {
            flex: 1;
            justify-content: space-around;
            margin-right: 10rem;
            gap: 0;
        }

        .hamburger {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 28px;
            height: 18px;
            cursor: pointer;
            z-index: 1100;
        }

        .hamburger span {
            width: 100%;
            height: 3px;
            background-color: var(--white);
            border-radius: 2px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .nav-links {
            position: fixed;
            top: 0;
            right: -100%;
            width: 75%;
            height: 100vh;
            background-color: var(--bg-colour);
            backdrop-filter: blur(8px);
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            padding-left: 15%;
            transition: right 0.4s ease-in-out;
            box-shadow: -10px 0 30px rgba(0,0,0,0.5);
        }

        .nav-item {
            margin: 1.5rem 0;
        }

        .nav-item a {
            font-size: 1.8rem;
        }

        .mobile-prefix {
            display: inline;
            color: var(--orange);
            margin-right: 8px;
            opacity: 0.6;
        }

        .menu-toggle:checked ~ .nav-links {
            right: 0;
        }

        .menu-toggle:checked + .hamburger span:nth-child(1) { transform: translateY(7.5px) rotate(45deg); }
        .menu-toggle:checked + .hamburger span:nth-child(2) { opacity: 0; }
        .menu-toggle:checked + .hamburger span:nth-child(3) { transform: translateY(-7.5px) rotate(-45deg); }
    }
</style>